{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@bonusmax/ui": ["../../packages/ui"],
      "@bonusmax/lib": ["../../packages/lib"],
      "@bonusmax/lib/*": ["../../packages/lib/*"],
      "@bonusmax/lib/prisma": ["../../packages/lib/db/client.ts"]
    },
    "jsx": "preserve",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
