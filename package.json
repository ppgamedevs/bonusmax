{
  "name": "bonusmax",
  "private": true,
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build",
    "build:analyze": "pnpm -C apps/web build:analyze",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma",
    "perf:test": "node scripts/performance-test.js",
    "perf:lighthouse": "lighthouse http://localhost:3000 --only-categories=performance --output=html --output-path=./lighthouse-report.html"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/node": "^22.7.6",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "zod": "^3.23.8"
  }
}
